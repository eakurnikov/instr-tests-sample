<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view_flaky"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_flaky_1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="1"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_flaky_2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/flaky_textview_text_start"
            android:textColor="@color/textColorLight"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_flaky_3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="3"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_flaky_4"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:text="4"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_flaky_5"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorPrimary"
            android:text="5"
            android:textColor="@color/textColorLight"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_flaky_6"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/flaky_btn_text_start"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_flaky_7"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorPrimary"
            android:text="7"
            android:textColor="@color/textColorLight"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>